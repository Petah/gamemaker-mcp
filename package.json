{
  "name": "@petah/gamemaker-mcp",
  "version": "1.0.1",
  "description": "GameMaker Language documentation tools with MCP server and CLI - search, lookup, and convert GameMaker documentation",
  "type": "module",
  "main": "src/gamemaker-docs-server.js",
  "bin": {
    "gamemaker-docs-server": "./src/gamemaker-docs-server.js",
    "gamemaker-mcp": "./src/gamemaker-docs-server.js",
    "gm-cli": "./src/cli.js",
    "gm-docs": "./src/cli.js"
  },
  "scripts": {
    "start": "node src/gamemaker-docs-server.js",
    "mcp": "node src/gamemaker-docs-server.js",
    "cli": "node src/cli.js",
    "cli:dev": "node --watch src/cli.js",
    "convert": "node src/cli.js convert",
    "prepublishOnly": "echo \"Ready to publish @petah/gamemaker-mcp\"",
    "postpublish": "echo \"Published successfully! Install with: npx @petah/gamemaker-mcp\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "commander": "^14.0.1",
    "jsdom": "^22.1.0",
    "turndown": "^7.1.2"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "gamemaker",
    "gml",
    "gamemaker-language",
    "documentation",
    "mcp",
    "model-context-protocol",
    "cli",
    "search",
    "lookup",
    "markdown",
    "converter",
    "html-to-markdown",
    "docs",
    "reference"
  ],
  "author": "",
  "license": "MIT",
  "homepage": "#",
  "repository": {
    "type": "git",
    "url": "#"
  },
  "bugs": {
    "url": "#"
  },
  "files": [
    "src/",
    "md/",
    "init.txt",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true
}
